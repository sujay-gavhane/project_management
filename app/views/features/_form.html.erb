<div class="row">
  <div class="col-md-12" id="tab_2">
    <div class="portlet box green">
      <div class="portlet-title">
        <div class="caption">
          <i class="fa fa-pencil badge-warning"></i><%= @feature.new_record? ? 'Add Feature' : 'Edit Feature' %>
        </div>
        <div class="tools">
          <a href="javascript:;" class="collapse"></a>
        </div>
      </div>
      <div class="portlet-body form">
        <%= form_for([@project, @feature], html: {class: "form-horizontal"}) do |f| %>
          <div class=form-body>
            <div class='row'>
              <div class='col-md-6'>
                <label class="control-label">Title
                  <span class="required" aria-required="true">* </span>
                </label>
                <%= f.text_field :title, class: 'form-control' %>
              </div>
              <div class='col-md-6'>
                <label class="control-label">Description
                </label>
                <%= f.text_area :description, size: '5 x 5' , class: 'form-control' %>
              </div>
              <div class='col-md-6'>
                <label class="control-label">Description
                </label>
                <%= f.select :developer_id, options_for_select(@project.employees.collect {|p| [ p.email, p.id ] }), {:prompt => "Select Developer", :class => "form-control"} %>
              </div>
              <%= f.hidden_field :project_id, value: params[:project_id] %>
            </div>
          </div>
          <div class='form-actions fluid'>
            <% if @feature.new_record? %>
              <%= f.submit 'Create Feature', class: 'btn primary pull-right margin-top-15' %>
            <% else %>
              <%= f.submit 'Update', class: 'btn primary pull-right margin-top-15' %>
            <% end %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
</div>
