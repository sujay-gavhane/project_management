<%= link_to 'New Feature', new_project_feature_path(@project), class: 'pull-right btn btn-primary margin-bottom-30' %>
<div class="row">
  <div class="">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            Title
          </th>
          <th>
            Description
          </th>
          <th>
            Developer
          </th>
          <th>
            Action
          </th>
        </tr>
      </thead>
      <tbody>
        <% @features.each do |feature| %>
          <tr>
            <td>
              <%= feature.title %>
            </td>
            <td>
              <%= feature.description %>
            </td>
            <td>
              <%= feature.developer.email %>
            </td>
            <td>
              <%= link_to 'Edit', edit_project_feature_path(@project, feature) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>