<div class="row">
  <div class="col-md-12">
    <div class="portlet box green">
      <div class="portlet-body form">
        <table  class="table table-striped table-bordered table-hover no-footer" role="grid">
          <thead>
            <tr role="row" class='columnWrap'>
              <th>Name</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.first_name || employee.email %></td>
                <td><%= employee.roles.first.name %></td>
                <td><%= link_to 'Change Role', edit_employee_path(employee.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

